<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/refuelDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="01/01/2020"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/refuelDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/speed_24dp"
        app:tint="#4D4D4D" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refuelDate"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/pic1"
        android:gravity="center"
        android:text="Odometer"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/distance"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/local_gas_station_24dp"
        app:tint="#4D4D4D"/>

    <TextView
        android:id="@+id/fuelAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distance"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/pic2"
        android:gravity="center"
        android:text="Liters"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

</RelativeLayout>